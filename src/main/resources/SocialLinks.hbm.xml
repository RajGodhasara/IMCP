<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class name="com.gopiraj.Model.SocialLinks" table="social_links" catalog="projecttest">
        <id name="SocialLinkId" type="java.lang.Integer">
            <column name="social_link_id" />
            <generator class="identity" />
        </id>
        <property name="facebook" type="string">
            <column name="facebook" length="45" />
        </property>
        <property name="gmail" type="string">
            <column name="gmail" length="19" />
        </property>
        <property name="twitter" type="string">
            <column name="twitter" />
        </property>
       
    </class>

</hibernate-mapping>
